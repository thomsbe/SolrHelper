<?xml version="1.0" encoding="UTF-8" ?>
<schema name="example" version="1.6">
  <!-- Grundlegende Feldtypen -->
  <types>
    <!-- String-Feld für einfache Textwerte -->
    <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
    
    <!-- Textfeld mit Standard-Analyzer für deutsche Texte -->
    <fieldType name="text_de" class="solr.TextField" positionIncrementGap="100">
      <analyzer>
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <filter class="solr.StopFilterFactory" ignoreCase="true" words="lang/stopwords_de.txt"/>
        <filter class="solr.LowerCaseFilterFactory"/>
        <filter class="solr.GermanNormalizationFilterFactory"/>
        <filter class="solr.GermanLightStemFilterFactory"/>
      </analyzer>
    </fieldType>
    
    <!-- Ganzzahl-Feld -->
    <fieldType name="pint" class="solr.IntPointField" docValues="true"/>
    
    <!-- Fließkommazahl-Feld -->
    <fieldType name="pfloat" class="solr.FloatPointField" docValues="true"/>
    
    <!-- Datumsfeld -->
    <fieldType name="pdate" class="solr.DatePointField" docValues="true"/>
    
    <!-- Boolesches Feld -->
    <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>
  </types>

  <!-- Felder -->
  <fields>
    <!-- Pflichtfeld: Eindeutige ID -->
    <field name="id" type="string" indexed="true" stored="true" required="true" multiValued="false" />
    
    <!-- Beispiel für ein einfaches Textfeld -->
    <field name="titel" type="text_de" indexed="true" stored="true" multiValued="false" />
    
    <!-- Beispiel für ein mehrzeiliges Textfeld -->
    <field name="beschreibung" type="text_de" indexed="true" stored="true" multiValued="false" />
    
    <!-- Beispiel für ein mehrwertiges Textfeld (Tags) -->
    <field name="schlagwoerter" type="string" indexed="true" stored="true" multiValued="true" />
    
    <!-- Beispiel für ein numerisches Feld (Jahr) -->
    <field name="jahr" type="pint" indexed="true" stored="true" multiValued="false" />
    
    <!-- Beispiel für ein Fließkommazahl-Feld (Preis) -->
    <field name="preis" type="pfloat" indexed="true" stored="true" multiValued="false" />
    
    <!-- Beispiel für ein Datumsfeld -->
    <field name="erstellungsdatum" type="pdate" indexed="true" stored="true" multiValued="false" />
    
    <!-- Beispiel für ein boolesches Feld -->
    <field name="verfuegbar" type="boolean" indexed="true" stored="true" multiValued="false" />
    
    <!-- Dynamische Felder für zusätzliche Attribute -->
    <dynamicField name="*_s" type="string" indexed="true" stored="true" multiValued="false" />
    <dynamicField name="*_ss" type="string" indexed="true" stored="true" multiValued="true" />
    <dynamicField name="*_t" type="text_de" indexed="true" stored="true" multiValued="false" />
    <dynamicField name="*_txt" type="text_de" indexed="true" stored="true" multiValued="true" />
  </fields>

  <!-- Eindeutiger Schlüssel -->
  <uniqueKey>id</uniqueKey>
  
  <!-- Standard-Suchfeld -->
  <defaultSearchField>titel</defaultSearchField>
  
  <!-- Standard-Query-Parser-Typ -->
  <solrQueryParser defaultOperator="AND"/>
</schema>
